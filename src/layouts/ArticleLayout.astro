// Create the WhatsApp text
const shareText = encodeURIComponent(`${title} - OyoTimes`);
const shareUrl = encodeURIComponent(Astro.url.href);
const whatsappLink = `https://wa.me/?text=${shareText}%20${shareUrl}`;
const facebookLink = `https://www.facebook.com/sharer/sharer.php?u=${shareUrl}`;

---

<BaseLayout title={title} activeId={categoryId}>
  <div class="container py-8 md:py-12">
        <nav class="text-sm text-muted mb-4" aria-label="Breadcrumb">
      <a href="/" class="hover:text-link">Home</a>
      <span class="mx-1">&gt;</span>
      <a href={`/category/${categoryId}`} class="hover:text-link">{category}</a>
      <span class="mx-1">&gt;</span>
      <span class="truncate">{title}</span>
    </nav>

    <div class="grid grid-cols-12 gap-6">
      <main class="col-span-12 lg:col-span-9">
        
                <header class="mb-6 border-b border-divider pb-6">
          <h1 class="font-merri font-bold text-4xl md:text-5xl text-primary mb-4">{title}</h1>
          
          <div class="flex flex-wrap items-center gap-x-6 gap-y-2 text-sm text-muted mb-3">
            <span class="flex items-center gap-1.5">
              <Fragment set:html={calendarIcon} />
              <time class="time-ago" datetime={date} data-fallback={date.split('T')[0]}>
                {date.split('T')[0]}
              </time>
            </span>
            <span class="flex items-center gap-1.5">
              <Fragment set:html={commentIcon} />
              COMMENTS: {comments}
            </span>
            <span class="flex items-center gap-1.5">
              <Fragment set:html={categoryIcon} />
              CATEGORY: {category.toUpperCase()}
            </span>
          </div>
          
          <div class="flex flex-wrap items-center justify-between gap-4">
            <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm">
              <span class="font-bold text-primary">By {author}</span>
                            <span class="text-muted">30 MINS AGO</span> 
              <span class="text-muted">2 MIN READ</span> 
            </div>
            <div class="flex items-center gap-2">
              <button class="w-9 h-9 flex items-center justify-center rounded-full bg-background-alt text-muted hover:bg-gray-300 transition-colors" aria-label="Show comments">
                <Fragment set:html={commentIcon} />
              </button>
              <a 
                href={whatsappLink}
                target="_blank"
                rel="noopener noreferrer"
                class="w-9 h-9 flex items-center justify-center rounded-full bg-green-100 text-green-600 hover:bg-green-200 transition-colors" 
                aria-label="Share on WhatsApp"
              >
                <Fragment set:html={whatsappIcon} />
              </a>

              <a 
                href={facebookLink}
                target="_blank"
                rel="noopener noreferrer"
                class="w-9 h-9 flex items-center justify-center rounded-full bg-blue-100 text-blue-600 hover:bg-blue-200 transition-colors" 
                aria-label="Share on Facebook"
              >
                <Fragment set:html={facebookIcon} />
              </a>
                          	<button id="bookmark-button" data-slug={Astro.url.pathname} class="w-9 h-9 flex items-center justify-center rounded-full bg-background-alt text-muted hover:bg-gray-300 transition-colors" aria-label="Bookmark">
                <Fragment set:html={bookmarkIcon} />
            	</button>
        	</div>
          </div>
    	  </header>

            	  <article class="prose prose-lg max-w-none prose-h2:font-merri prose-a:text-link">
    	 	 <img src={heroImage} alt={title} class="rounded-lg mb-6" />
    	 	 <slot /> 
  	 	 </article>
    	 	 
       	 	<!--{frontmatter.category === "Insight" && (
                 <Comments />
                )}-->

  	   </main>

  	   <aside class="col-span-12 lg:col-span-3">
  	 	 <Sidebar />
  	   </aside>
  	 </div>
  </div>

    <div>
    <EditorsPicks />
  </div>
</BaseLayout>

<script define:vars={{ title, url: Astro.url.href }}>
  // --- SHARE BUTTON LOGIC ---
  const shareButton = document.getElementById('share-button');
  if (shareButton && navigator.share) { // Check if browser supports Web Share API
    shareButton.addEventListener('click', async () => {
      try {
        await navigator.share({
          title: title,
          text: `Check out this article from OyoTimes: ${title}`,
          url: url,
        });
      } catch (err) {
        console.error('Error sharing:', err);
      }
    });
  } else if (shareButton) {
    // Hide share button if not supported
    shareButton.style.display = 'none';
  }

  // --- BOOKMARK BUTTON LOGIC (using localStorage) ---
  const bookmarkButton = document.getElementById('bookmark-button');
  if (bookmarkButton) {
    const storageKey = 'OYOTIMES_BOOKMARKS';
    const slug = bookmarkButton.getAttribute('data-slug');
    
    // Get bookmarks from localStorage (or create an empty array)
    let bookmarks = JSON.parse(localStorage.getItem(storageKey) || '[]');
    
    // Function to update the button's style
    function updateBookmarkState() {
      if (bookmarks.includes(slug)) {
        bookmarkButton.classList.add('is-bookmarked');
      } else {
        bookmarkButton.classList.remove('is-bookmarked');
      }
    }

    // Check state on page load
    updateBookmarkState();

    // Add click listener
    bookmarkButton.addEventListener('click', () => {
      if (bookmarks.includes(slug)) {
        // Already bookmarked, so remove it
        bookmarks = bookmarks.filter(b => b !== slug);
      } else {
        // Not bookmarked, so add it
        bookmarks.push(slug);
      }
      // Save the updated list back to localStorage
      localStorage.setItem(storageKey, JSON.stringify(bookmarks));
      // Update the button's style
      updateBookmarkState();
    });
  }
</script>

<style>
  #bookmark-button.is-bookmarked {
    fill: var(--color-base-red-942414);
    color: var(--color-base-red-942414);
  }
</style>
