---
// src/components/cards/CardOverlay.astro
export interface Props {
  href: string;
  imgSrc: string;
  category: string;
  title: string;
  date: string; // Expects ISO date
  readTime: string; // Injected by plugin
}
const { href, imgSrc, category, title, date, readTime } = Astro.props;

const categoryColors = {
  Business: "bg-category-business",
  Sports: "bg-category-sports",
  Politics: "bg-category-politics",
  Tech: "bg-category-tech",
  Education: "bg-category-education",
};

const clockIcon = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" ...></svg>`;
const calendarIcon = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>`;
---

<a 
  href={href} 
  class="group relative block rounded-lg overflow-hidden shadow-soft hover:shadow-lift transition-all duration-300"
>
  <img 
    src={imgSrc} 
    alt={title} 
    class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
  <div class="relative flex flex-col justify-end h-80 p-6 text-white">
    
    <span class={`text-xs font-bold uppercase ${categoryColors[category] || 'bg-gray-500'} text-white py-1 px-2 rounded-sm mb-3 w-max`}>
      {category}
    </span>
    
    <h3 class="font-merri font-bold text-2xl leading-tight text-text-white mb-4 group-hover:text-gray-200 transition-colors">
      {title}
    </h3>
    
    <div class="flex items-center gap-4 text-sm font-medium text-gray-300 border-t border-gray-600 pt-4">
      <span class="flex items-center gap-1.5">
        <Fragment set:html={calendarIcon} />
        <time class="time-ago" datetime={date} data-fallback={date.split('T')[0]}>
          {date.split('T')[0]}
        </time>
      </span>
      <span class="flex items-center gap-1.5">
        <Fragment set:html={clockIcon} />
        {readTime}
      </span>
    </div>
  </div>
</a>

<script>
  import { format, formatDistanceToNow, parseISO, differenceInDays } from 'date-fns';

  const now = new Date();
  const timeElements = document.querySelectorAll('.time-ago');

  timeElements.forEach(timeEl => {
    const isoDate = timeEl.getAttribute('datetime');
    if (isoDate) {
      try {
        const date = parseISO(isoDate);
        const daysDifference = differenceInDays(now, date);

        if (daysDifference <= 7) {
          // WITHIN 7 DAYS: Show "X days ago"
          timeEl.textContent = formatDistanceToNow(date, { addSuffix: true });
        } else {
          // OLDER THAN 7 DAYS: Show "August 27, 2025"
          timeEl.textContent = format(date, 'MMMM d, yyyy');
        }
      } catch (e) {
        console.error("Failed to parse date:", isoDate, e);
        timeEl.textContent = timeEl.getAttribute('data-fallback');
      }
    }
  });
</script>