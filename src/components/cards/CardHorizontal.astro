---
// src/components/cards/CardHorizontal.astro
export interface Props {
  href: string;
  imgSrc: string;
  author: string;
  date: string;
  title: string;
  excerpt: string;
}
const { href, imgSrc, author, date, title, excerpt } = Astro.props;
---

<a href={href} class="group flex gap-4">
  <div class="w-2/5 md:w-1/3 flex-shrink-0">
    <img 
      src={imgSrc} 
      alt={title} 
      class="w-full h-full object-cover rounded-md group-hover:opacity-90 transition-opacity"
    />
  </div>

  <div class="w-3/5 md:w-2/3">
    <p class="text-xs font-bold text-textColor-muted uppercase tracking-wide mb-1">
      {author} - {date}
    </p>
    <h3 class="font-merri font-bold text-lg leading-tight text-textColor-primary group-hover:text-oyo-primary transition-colors mb-2">
      {title}
    </h3>
    <p class="text-sm text-textColor-muted line-clamp-3">
      {excerpt}
    </p>
  </div>
</a>