---
// src/components/cards/CardSidebarImage.astro
export interface Props {
  href: string;
  imgSrc: string;
  category: string;
  title: string;
  date: string;
}
const { href, imgSrc, category, title, date } = Astro.props;

const categoryColors = {
  Business: "bg-category-business",
  Sports: "bg-category-sports",
  Politics: "bg-category-politics",
  Tech: "bg-category-tech",
  Education: "bg-category-education",
};
const calendarIcon = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>`;
---
<article class="group space-y-2">
  <a href={href} class="block overflow-hidden rounded-md">
    <img src={imgSrc} alt={title} class="w-full h-auto object-cover group-hover:scale-105 transition-transform duration-300" />
  </a>
  <span class={`text-xs font-bold uppercase ${categoryColors[category] || 'bg-gray-500'} text-white py-1 px-2 rounded-sm w-max`}>
    {category}
  </span>
  <h3 class="font-merri font-bold text-lg leading-tight text-primary hover:text-link transition-colors">
    <a href={href}>{title}</a>
  </h3>
  <div class="flex items-center gap-1.5 text-xs text-muted">
    <Fragment set:html={calendarIcon} />
    {date}
  </div>
</article>