---
// src/components/cards/CardEvent.astro
export interface Props {
  href: string;
  title: string;
  description: string;
  startDate: Date;
  startTime: string;
  location: string;
  price: string;
  imgSrc: string;
}

const { href, title, description, startDate, startTime, location, price, imgSrc } = Astro.props;

// Helper to format date nicely (e.g., "DEC 15")
const month = startDate.toLocaleDateString('en-US', { month: 'short' }).toUpperCase();
const day = startDate.toLocaleDateString('en-US', { day: '2-digit' });
const weekday = startDate.toLocaleDateString('en-US', { weekday: 'long' });

// Icons
const locationIcon = `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0L6.343 16.657a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>`;
const timeIcon = `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`;
---

<a href={href} class="group block bg-white rounded-lg overflow-hidden shadow-soft hover:shadow-md transition-all">
  <div class="flex flex-col md:flex-row h-full">
    <div class="relative md:w-2/5 lg:w-1/3 shrink-0 h-48 md:h-auto">
      <img src={imgSrc} alt={title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"/>
      <div class="absolute top-4 left-4 bg-white/95 rounded-md p-3 text-center shadow-sm backdrop-blur-sm">
        <span class="block text-sm font-bold text-link tracking-wider">{month}</span>
        <span class="block font-merri font-bold text-3xl text-primary leading-none">{day}</span>
      </div>
    </div>
    
    <div class="p-6 md:p-8 flex flex-col justify-between flex-grow">
       <div>
         <div class="flex justify-between items-start mb-3">
           <span class="text-sm font-bold text-muted uppercase tracking-wider">{weekday}</span>
           <span class={`text-sm font-bold px-3 py-1 rounded-full ${price === 'Free' ? 'bg-green-100 text-green-700' : 'bg-background-alt text-primary'}`}>
             {price}
           </span>
         </div>
         <h3 class="font-merri font-bold text-2xl md:text-3xl text-primary mb-4 group-hover:text-link transition-colors line-clamp-2">
           {title}
         </h3>
         <p class="text-muted mb-6 line-clamp-2">{description}</p>
       </div>
       
       <div class="flex flex-col sm:flex-row gap-4 text-sm text-muted font-medium border-t border-divider pt-4">
         <div class="flex items-center gap-2">
           <Fragment set:html={timeIcon} />
           {startTime}
         </div>
         <div class="flex items-center gap-2">
           <Fragment set:html={locationIcon} />
           <span class="truncate">{location}</span>
         </div>
       </div>
    </div>
  </div>
</a>