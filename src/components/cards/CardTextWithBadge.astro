---
// src/components/cards/CardTextWithBadge.astro
export interface Props {
  href: string;
  category: string;
  title: string;
  date: string;
}
const { href, category, title, date } = Astro.props;

// Helper map for category BG colors
const categoryColors = {
  Business: "bg-category-business",
  Sports: "bg-category-sports",
  Politics: "bg-category-politics",
  Tech: "bg-category-tech",
  Education: "bg-category-education",
};

const calendarIcon = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>`;
---

<article class="space-y-2">
  <span class={`text-xs font-bold uppercase ${categoryColors[category] || 'bg-gray-500'} text-white py-1 px-2 rounded-sm`}>
    {category}
  </span>
  <h4 class="font-merri font-semibold text-base leading-tight text-textColor-primary hover:text-oyo-primary transition-colors">
    <a href={href}>{title}</a>
  </h4>
  <div class="flex items-center gap-1.5 text-xs text-muted">
    <Fragment set:html={calendarIcon} />
    <time class="time-ago" datetime={date} data-fallback={date.split('T')[0]}>
      {date.split('T')[0]}
    </time>
  </div>
</article>

<script>
  // This script runs in the browser to update the date format
  import { format, formatDistanceToNow, parseISO, differenceInDays } from 'date-fns';

  const now = new Date();
  const timeElements = document.querySelectorAll('.time-ago');

  timeElements.forEach(timeEl => {
    const isoDate = timeEl.getAttribute('datetime');
    if (isoDate) {
      try {
        const date = parseISO(isoDate);
        const daysDifference = differenceInDays(now, date);

        if (daysDifference <= 7) {
          // WITHIN 7 DAYS: Show "X days ago"
          timeEl.textContent = formatDistanceToNow(date, { addSuffix: true });
        } else {
          // OLDER THAN 7 DAYS: Show "August 27, 2025"
          timeEl.textContent = format(date, 'MMMM d, yyyy');
        }
      } catch (e) {
        console.error("Failed to parse date:", isoDate, e);
        timeEl.textContent = timeEl.getAttribute('data-fallback');
      }
    }
  });
</script>


