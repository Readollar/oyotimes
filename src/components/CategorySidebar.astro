---
// src/components/CategorySidebar.astro
import CardVertical from './cards/CardVertical.astro';

export interface Props {
  articles: any[];
}
const { articles } = Astro.props;

// 1. Filter using '.data.isTopStory'
// We also verify 'article.data' exists to prevent errors
const topStories = articles
  .filter(article => article.data.isTopStory === true)
  .slice(0, 4);
---

<aside class="space-y-8">
  
  <form action="/search" method="GET">
    <label for="sidebar-search-category" class="sr-only">Search</label>
    <div class="relative">
      <input 
        id="sidebar-search-category"
        type="search" 
        name="q"
        placeholder="Search..."
        class="w-full px-4 py-3 border border-divider rounded-md focus:ring-2 focus:ring-primary focus:outline-none"
      />
      <button type="submit" class="absolute right-0 top-0 h-full px-4 text-muted hover:text-primary" aria-label="Submit search">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
      </button>
    </div>
  </form>

  <div>
    <h3 class="font-merri font-bold text-xl mb-4 text-primary">Top Stories</h3>
    
    {topStories.length > 0 ? (
      <ul class="space-y-6">
        {topStories.map(story => (
          <li class="pt-6 border-t border-divider first:pt-0 first:border-t-0 list-none">
            <CardVertical
              href={`/blog/${story.slug}/`}
              imgSrc={story.data.heroImage}
              category={story.data.category}
              title={story.data.title}
              date={story.data.date}
              readTime={story.readingTime}
            />
          </li>
        ))}
      </ul>
    ) : (
      <p class="text-sm text-muted italic">No top stories selected.</p>
    )}
  </div>

  <div class="space-y-4">
    <div class="bg-background-alt h-64 rounded-md flex items-center justify-center text-muted font-bold">
      Advertising (360px * 250px)
    </div>
    <div class="bg-background-alt h-64 rounded-md flex items-center justify-center text-muted font-bold">
      Advertising (360px * 250px)
    </div>
  </div>

</aside>