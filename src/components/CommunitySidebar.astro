---
// src/components/CommunitySidebar.astro
// This sidebar uses the 'CardTextWithBadge' component
import CardTextWithBadge from './cards/CardTextWithBadge.astro';

const topStories = [
  { href: "#", category: "Sports", title: "Oyo Youth Football League Kicks Off", date: "27 AUGUST, 2025" },
  { href: "#", category: "Education", title: "New Classrooms Commissioned in Oyo Schools", date: "27 AUGUST, 2025" },
  { href: "#", category: "Politics", title: "Community Leaders Call for Inclusive Governance", date: "27 AUGUST, 2025" },
  { href: "#", category: "Tech", title: "Oyo Youths Explore AI for Business Growth", date: "27 AUGUST, 2025" },
];
---
<aside class="space-y-8">
  <div class="relative">
    <input 
      type="search" 
      placeholder="Search..."
      class="w-full px-4 py-3 border border-divider rounded-md focus:ring-2 focus:ring-primary focus:outline-none"
    />
    <button class="absolute right-0 top-0 h-full px-4 text-muted hover:text-primary">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
    </button>
  </div>

  <div>
    <h3 class="font-merri font-bold text-xl mb-4">Top Stories</h3>
    <ul class="space-y-4">
      {topStories.map(story => (
        <li class="pt-4 border-t border-divider">
          <CardTextWithBadge {...story} />
        </li>
      ))}
    </ul>
  </div>

  <div class="space-y-4">
    <div class="bg-background-alt h-64 rounded-md flex items-center justify-center text-muted">
      Advertising (360px * 250px)
    </div>
    <div class="bg-background-alt h-64 rounded-md flex items-center justify-center text-muted">
      Advertising (360px * 250px)
    </div>
  </div>
</aside>