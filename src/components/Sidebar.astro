---
// src/components/Sidebar.astro
// Corrected version based on the user's 'Recent Stories' image.
// This version reuses our existing 'CardVertical' component.

import CardVertical from './cards/CardVertical.astro';

// Placeholder data for recent stories
const recentStories = [
  {
    href: "/blog/local-startups-making-waves",
    imgSrc: "/img/latest/business.jpg", // Replace with your image
    category: "Business",
    title: "Local Markets Record Rise in Food Prices",
    date: "27 AUGUST, 2025",
    readTime: "20 MINS",
  },
  {
    href: "/blog/oyo-youth-football",
    imgSrc: "/img/latest/sports.jpg", // Replace with your image
    category: "Sports",
    title: "Oyo Youth Football League Kicks Off",
    date: "27 AUGUST, 2025",
    readTime: "20 MINS",
  },
  {
    href: "/blog/community-leaders-talks",
    imgSrc: "/img/latest/politics.jpg", // Replace with your image
    category: "Politics",
    title: "Community Leaders Call for Inclusive Governance",
    date: "27 AUGUST, 2025",
    readTime: "20 MINS",
  },
  {
    href: "/blog/oyo-youths-ai",
    imgSrc: "/img/latest/tech.jpg", // Replace with your image
    category: "Tech",
    title: "Oyo Youths Explore AI for Business Growth",
    date: "27 AUGUST, 2025",
    readTime: "20 MINS",
  },
];
---
<aside class="space-y-8">
  <div class="relative">
    <label for="sidebar-search" class="sr-only">Search Anything</label>
    <input 
      id="sidebar-search"
      type="search" 
      placeholder="Search Anything"
      class="w-full px-4 py-3 border border-oyo-divider rounded-md focus:ring-2 focus:ring-oyo-primary focus:outline-none"
    />
    <button class="absolute right-0 top-0 h-full px-4 text-textColor-muted hover:text-oyo-primary" aria-label="Submit search">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
    </button>
  </div>

  <div>
    <h3 class="font-merri font-bold text-xl mb-4">Recent Stories</h3>
    <div class="space-y-6">
      {recentStories.map(story => (
        <CardVertical
          href={story.href}
          imgSrc={story.imgSrc}
          category={story.category}
          title={story.title}
          date={story.date}
          readTime={story.readTime}
        />
      ))}
    </div>
  </div>

  <div class="space-y-4">
    <div class="bg-oyo-bg-alt h-48 rounded-md flex items-center justify-center text-textColor-muted">
      Advertising (360px * 180px)
    </div>
    <div class="bg-oyo-bg-alt h-48 rounded-md flex items-center justify-center text-textColor-muted">
      Advertising (360px * 180px)
    </div>
  </div>
</aside>