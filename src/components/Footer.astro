---

<footer class="bg-background-footer font-inter" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="container mx-auto px-4 py-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 text-text-inverse">
    <div class="md:col-span-1">
      <a href="/" aria-label="OyoTimes homepage">
        <img src={LogoFullWhite.src} alt="OyoTimes Logo" class="w-32 mb-4" />
      </a>
      <p class="text-sm leading-relaxed caption">
        Empowering the youth with community news and insights.
      </p>
    </div>

    <div>
      <h3 class="font-bold mb-4 text-pastel">Categories</h3>
      <ul class="space-y-3 text-textColor-muted">
        {footerLinks.categories.map(link => (
          <li><a href={link.href} class="text-linkfooter hover:text-white transition-colors">{link.text}</a></li>
        ))}
      </ul>
    </div>

    <div>
      <h3 class="font-bold mb-4 text-pastel">Extras</h3>
      <ul class="space-y-3 text-textColor-muted">
        {footerLinks.extras.map(link => (
          <li>
            <a href={link.href} class="text-linkfooter hover:text-white transition-colors flex items-center gap-2">
              {link.text}
              {link.isNew && (
                <span class="bg-white text-background-footer text-xs font-bold px-2 py-0.5 rounded-full">New</span>
              )}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <div>
      <h3 class="font-bold mb-4 text-pastel">Social</h3>
      <ul class="space-y-3 text-textColor-muted">
        {footerLinks.social.map(link => (
          <li>
            <a href={link.href} class="text-linkfooter hover:text-white transition-colors flex items-center gap-3">
              <Fragment set:html={socialIcons[link.text]} />
              <span class="ml-2">{link.text}</span>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
  <div class="bg-black py-4">
    <div class="container mx-auto px-4 text-center sm:text-center text-sm text-body-sm">
      <p class="text-body-smregular">&copy; {new Date().getFullYear()} Oyo Times. All rights reserved.</p>
    <div class="container flex gap-6 items-center justify-center mx-auto px-4 text-center sm:text-center text-sm text-body-sm">
        <a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a>
        <a href="/terms" class="hover:text-white transition-colors">Terms of Service</a>
    </div>
    </div>

  </div>
</footer>

<style>
  .foot-inner {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    justify-content: space-between;
    padding: 18px 0;
  }

  .caption {
    color: #b3b3b3;
  }
</style>