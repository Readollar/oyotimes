---
import { Twitter, Linkedin, Github, Dribbble } from "lucide-react";
import LogoFull from "../assets/exports/logos/logo-full.svg";
---

<footer class="bg-[#3B1C17] text-neutral-100">
  <div class="max-w-7xl mx-auto px-6 py-16 grid grid-cols-1 md:grid-cols-4 gap-12">
    <!-- Logo & Tagline -->
    <div>
      <img src={LogoFull.src} alt="OyoTimes Logo" class="w-40 mb-4" />
      <p class="text-sm leading-relaxed text-neutral-300">
        Empowering the youth with community news and insights.
      </p>
    </div>

    <!-- Categories -->
    <div>
      <h3 class="font-semibold mb-4 text-neutral-50">Categories</h3>
      <ul class="space-y-2 text-neutral-300">
        <li><a href="#" class="hover:text-white">Business</a></li>
        <li><a href="#" class="hover:text-white">Politics</a></li>
        <li><a href="#" class="hover:text-white">Tech</a></li>
        <li><a href="#" class="hover:text-white">Education</a></li>
        <li><a href="#" class="hover:text-white">Sports</a></li>
      </ul>
    </div>

    <!-- Extras -->
    <div>
      <h3 class="font-semibold mb-4 text-neutral-50">Extras</h3>
      <ul class="space-y-2 text-neutral-300">
        <li><a href="#" class="hover:text-white">Monarch’s Desk</a></li>
        <li><a href="#" class="hover:text-white">Places to Visit</a></li>
        <li class="flex items-center gap-2">
          <a href="#" class="hover:text-white">People’s Insight</a>
          <span class="bg-white text-[#3B1C17] text-xs font-semibold px-2 py-0.5 rounded-full">New</span>
        </li>
        <li><a href="#" class="hover:text-white">About us</a></li>
      </ul>
    </div>

    <!-- Social -->
    <div>
      <h3 class="font-semibold mb-4 text-neutral-50">Social</h3>
      <ul class="space-y-3 text-neutral-300">
        <li class="flex items-center gap-3 hover:text-white">
          <Twitter class="w-5 h-5" /> Twitter
        </li>
        <li class="flex items-center gap-3 hover:text-white">
          <Linkedin class="w-5 h-5" /> LinkedIn
        </li>
        <li class="flex items-center gap-3 hover:text-white">
          <Github class="w-5 h-5" /> GitHub
        </li>
        <li class="flex items-center gap-3 hover:text-white">
          <Dribbble class="w-5 h-5" /> Dribbble
        </li>
      </ul>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-neutral-800 py-6 text-center text-sm text-neutral-400">
    © 2025 Oyo Times. All rights reserved.
  </div>
</footer>
