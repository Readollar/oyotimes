---
// src/components/LatestNews.astro
// This file is now much simpler!
// 1. Import the new card component
import CardOverlay from './cards/CardOverlay.astro';

// 2. Define the data for the cards
const latestArticles = [
  {
    href: "#",
    imgSrc: "src/assets/exports/img/latest/sports.jpg",
    category: "Sports",
    title: "Oyo Youth Football League Kicks Off",
    date: "27 AUGUST, 2025",
    readTime: "20 MINS",
  },
  {
    href: "#",
    imgSrc: "src/assets/exports/img/latest/tech.jpg",
    category: "Tech",
    title: "Oyo Youths Explore AI for Business Growth",
    date: "27 AUGUST, 2025",
    readTime: "20 MINS",
  },
  {
    href: "#",
    imgSrc: "src/assets/exports/img/latest/business.jpg",
    category: "Business",
    title: "Local Startups Making Waves",
    date: "27 AUGUST, 2025",
    readTime: "20 MINS",
  },
];
---

<section class="py-8 md:py-12">
  <div class="mb-8 pb-4 border-b border-oyo-divider">
    <h2 class="font-merri text-2xl md:text-3xl font-bold text-textColor-primary">
      Latest News
    </h2>
    <div class="w-16 h-1 bg-oyo-primary mt-2"></div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {latestArticles.map(article => (
      <CardOverlay
        href={article.href}
        imgSrc={article.imgSrc}
        category={article.category}
        title={article.title}
        date={article.date}
        readTime={article.readTime}
      />
    ))}
  </div>
</section>