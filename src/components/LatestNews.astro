---
// src/components/LatestNews.astro
import CardOverlay from './cards/CardOverlay.astro';

const latestArticles = [
  {
    href: "/blog/oyo-youth-football-league-kicks-off/",
    imgSrc: "/img/latest/sports.jpg",
    category: "Sports",
    title: "Oyo Youth Football League Kicks Off",
    date: "27 AUGUST, 2025",
    readTime: "20 MINS",
  },
  {
    href: "/blog/oyo-youths-explore-ai-for-business-growth/",
    imgSrc: "/img/latest/tech.jpg",
    category: "Tech",
    title: "Oyo Youths Explore AI for Business Growth",
    date: "27 AUGUST, 2025",
    readTime: "20 MINS",
  },
  {
    href: "/blog/local-startups-making-waves/",
    imgSrc: "/img/latest/business.jpg",
    category: "Business",
    title: "Local Startups Making Waves",
    date: "27 AUGUST, 2025",
    readTime: "20 MINS",
  },
];
---

<section class="container py-8 md:py-12">
  <div class="mb-8 pb-4 border-b border-divider">
    <h2 class="font-merri text-2xl md:text-3xl font-bold text-primary">
      Latest News
    </h2> 
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {latestArticles.map(article => (
      <CardOverlay
        href={article.href}
        imgSrc={article.imgSrc}
        category={article.category}
        title={article.title}
        date={article.date}
        readTime={article.readTime}
      />
    ))}
  </div>
</section>