---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="List Your Business" activeId="places">
  <div class="container py-8 md:py-12">
    <div class="max-w-3xl mx-auto">

      <div class="text-center mb-8">
        <h1 class="font-merri font-bold text-4xl md:text-5xl text-primary">
          Join the Directory
        </h1>
        <p class="text-lg text-muted mt-4">
          We are currently accepting the first 50 businesses in Oyo Town to be listed as <strong>Founding Partners</strong> for free.
        </p>
      </div>

      <div class="border border-divider rounded-lg p-4 bg-background-alt">
        <div class="py-20 text-center text-muted italic">
          <iframe data-tally-src="https://tally.so/embed/5BXNDN?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1" loading="lazy" width="100%" height="200" frameborder="0" marginheight="0" marginwidth="0" title="OyoTimes Business Directory"></iframe>
            <script>var d=document,w="https://tally.so/widgets/embed.js",v=function(){"undefined"!=typeof Tally?Tally.loadEmbeds():d.querySelectorAll("iframe[data-tally-src]:not([src])").forEach((function(e){e.src=e.dataset.tallySrc}))};if("undefined"!=typeof Tally)v();else if(d.querySelector('script[src="'+w+'"]')==null){var s=d.createElement("script");s.src=w,s.onload=v,s.onerror=v,d.body.appendChild(s);}</script>
        </div>
      </div>
      
    </div>
  </div>
</BaseLayout>