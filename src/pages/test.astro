---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Style Test">
  <main style="padding: 2rem;">
    <h1 class="text-heading-xl">Heading XL Test</h1>
    <h2 class="text-heading-lg">Heading LG Test</h2>
    <p class="text-body-md">
      This is a medium body paragraph using the base typography system.
    </p>

    <button class="btn btn-primary btn-md">Primary Button</button>
    <button class="btn btn-secondary btn-md">Secondary Button</button>

    <div class="card" style="margin-top: 2rem;">
      <div class="card-header">Card Header</div>
      <div class="card-body">This is a card body with base tokens.</div>
    </div>

    <input class="input" placeholder="Type something..." />
  </main>
</BaseLayout>