---
// src/pages/events/[slug].astro
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// 1. Generate paths for ALL events
export async function getStaticPaths() {
  const allEvents = await getCollection('events');
  return allEvents.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// 2. Get data
const { entry } = Astro.props;
const { Content } = await entry.render();
const event = entry.data;

// Format Date
const formattedDate = event.startDate.toLocaleDateString('en-US', {
  weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'
});

// Icons
const calendarIcon = `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>`;
const clockIcon = `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`;
const locationIcon = `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0L6.343 16.657a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>`;
const ticketIcon = `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path></svg>`;
---

<BaseLayout title={event.title} activeId="events">
  
  <div class="w-full h-80 md:h-96 bg-gray-100">
    <img src={event.imgSrc} alt={event.title} class="w-full h-full object-cover" />
  </div>

  <div class="container py-12">
    <div class="grid grid-cols-12 gap-8 lg:gap-12">
      
      <main class="col-span-12 lg:col-span-8">
        <h1 class="font-merri font-bold text-3xl md:text-5xl text-primary mb-4">{event.title}</h1>
        <p class="text-lg md:text-xl text-muted mb-8">{event.description}</p>

        <div class="prose prose-lg max-w-none text-primary">
          <Content />
        </div>
      </main>

      <aside class="col-span-12 lg:col-span-4">
        <div class="bg-background-alt p-6 rounded-lg shadow-soft sticky top-24">
          <h3 class="font-merri font-bold text-xl text-primary mb-6 border-b border-divider pb-2">Event Details</h3>
          
          <div class="space-y-5">
            <div class="flex gap-3">
              <div class="text-primary mt-1"><Fragment set:html={calendarIcon} /></div>
              <div>
                <span class="block text-xs font-bold uppercase text-muted">Date</span>
                <span class="text-primary font-medium">{formattedDate}</span>
                {event.endDate && <span class="text-sm text-muted block">to {event.endDate.toLocaleDateString()}</span>}
              </div>
            </div>

            <div class="flex gap-3">
              <div class="text-primary mt-1"><Fragment set:html={clockIcon} /></div>
              <div>
                <span class="block text-xs font-bold uppercase text-muted">Time</span>
                <span class="text-primary font-medium">{event.startTime}</span>
              </div>
            </div>

            <div class="flex gap-3">
              <div class="text-primary mt-1"><Fragment set:html={locationIcon} /></div>
              <div>
                <span class="block text-xs font-bold uppercase text-muted">Location</span>
                <span class="text-primary font-medium">{event.location}</span>
                {event.address && <span class="text-sm text-muted block">{event.address}</span>}
              </div>
            </div>

            <div class="flex gap-3">
              <div class="text-primary mt-1"><Fragment set:html={ticketIcon} /></div>
              <div>
                <span class="block text-xs font-bold uppercase text-muted">Entry Fee</span>
                <span class="text-primary font-bold">{event.price}</span>
              </div>
            </div>
          </div>

            {event.website && (
                        <div class="mt-8">
                          <a 
                            href={event.website} 
                            target="_blank"
                            rel="noopener noreferrer"
                            class="block w-full bg-button-default text-white text-center font-bold py-3 rounded-md hover:bg-button-hover transition-colors"
                          >
                            Register / Buy Tickets
                          </a>
                        </div>
                      )}

        </div>
      </aside>

    </div>
  </div>
</BaseLayout>