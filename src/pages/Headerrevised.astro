---
// src/components/Header.astro

// 1. Get the 'activePage' prop from the layout
export interface Props {
  activePage?: string;
}
const { activePage } = Astro.props;

const navLinks = [
  { href: "/", text: "Home" },
  { href: "/category/business", text: "Business" },
  { href: "/category/politics", text: "Politics" },
  { href: "/category/tech", text: "Tech" },
  { href: "/category/education", text: "Education" },
  { href: "/category/sports", text: "Sports" },
  { href: "#", text: "Places" }, // Update these hrefs as needed
  { href: "#", text: "Community's Insight" },
  { href: "#", text: "Monarch's Desk" },
  { href: "#", text: "About" },
];
---

<header class="font-inter text-oyo-fadeblack border-b border-oyo-divider">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-3">
      </div>

    <nav class="hidden md:flex justify-center items-center py-3">
      <ul class="flex space-x-8 text-sm font-bold tracking-wider uppercase">
        {navLinks.map(link => {
          // 2. Check if this link's text matches the activePage prop
          const isActive = link.text === activePage;
          
          return (
            <li>
              <a
                href={link.href}
                class:list={[
                  "pb-3 border-b-2 transition-all",
                  isActive
                    ? "text-oyo-primary border-oyo-primary" // Active styles
                    : "text-textColor-primary border-transparent hover:text-oyo-primary hover:border-oyo-primary" // Default styles
                ]}
              >
                {link.text}
              </a>
            </li>
          )
        })}
      </ul>
    </nav>
  </div>
</header>

